<Gerenciador>:
    Menu:
        name: 'menu'
    CadMadeira:
        name: 'cadastro_madeira'
    ModificaMadeira:
        name: 'modifica_madeira'
    ModificacaoDia:
        name: 'modificacao_dia'
 
<Menu>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'FORTALEZA APP'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'MENU'
                    on_release: app.root.current = 'menu'
        GridLayout:
            rows: 1
            Button:
                text: 'Cadastro de Madeira'
                font_size: '20sp'
                on_release: app.root.current = 'cadastro_madeira'
            Button:
                text: 'Cadastro Modificação'
                font_size: '20sp'
                on_release: app.root.current = 'modifica_madeira'
            Button:
                text: 'Madeiras Modificadas'
                font_size: '20sp'
                on_release: app.root.current = 'modificacao_dia'

<CadMadeira>
    BoxLayout:
        orientation: 'vertical'
        spacing: '30sp'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'FORTALEZA APP'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'MENU'
                    on_release: app.root.current = 'menu'
                    
        Label:
            padding: '30sp','10sp'
            size: '50sp', '50sp'
            text: 'CADASTRO DE MADEIRA'
            font_size: '50sp'
        BoxLayout:
            padding: '60sp','30sp'
            Spinner:
                size: '200sp','50sp'
                id: tipoMadeira
                text: 'TIPO'
                values: root.tipoMadeira
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'NOME'
                    font_size: '40sp'
                TextInput:
                    id: nomeMadeira
        Button:
            text: 'SALVAR'
<ModificaMadeira>
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'FORTALEZA APP'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'MENU'
                    on_release: app.root.current = 'menu'
        Label:
            text: 'QUAL MADEIRA UTILIZADA:'
            font_size: '30sp'
        Spinner:
            text: 'SELECIONAR'
            values: '1'
        Button:
            text: 'SALVAR'

<ModificacaoDia>
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'FORTALEZA APP'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'MENU'
                    on_release: app.root.current = 'menu'
        Label:
            text: 'MADEIRA PARA CADASTRAR MODIFICAÇÃO'
            font_size: '25sp'
        Label:
            text: '2 - PINUS 5x5 | 4 - PINUS 2,5x2,5'
            font_size: '19sp'

    