<Gerenciador>:
    CadMadeira:
        name: 'cadastro_madeira'
    Menu:
        name: 'menu'
    
    ModificaMadeira:
        name: 'modifica_madeira'
    ModificacaoDia:
        name: 'modificacao_dia'
 
<Menu>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'FORTALEZA APP'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'MENU'
                    on_release: app.root.current = 'menu'
        GridLayout:
            rows: 3
            Button:
                text: 'Cadastro de Madeira'
                font_size: '20sp'
                on_release: app.root.current = 'cadastro_madeira'
            Button:
                text: 'Cadastro Modificação'
                font_size: '20sp'
                on_release: app.root.current = 'modifica_madeira'
            Button:
                text: 'Madeiras Modificadas'
                font_size: '20sp'
                on_release: app.root.current = 'modificacao_dia'

<CadMadeira>
    BoxLayout:
        orientation: 'vertical'
        spacing: '30sp'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'CADASTRO DE MADEIRA'
                    font_size: '20sp'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'LIMPAR'
                    on_release: app.root.current = 'menu'
                    
       # Label:
       #     text: 'CADASTRO DE MADEIRA'
       #     font_size: '50sp'
       #     bold: True #negrito
        BoxLayout:
            #padding: '60sp','30sp'
            padding: '10sp'
            orientation: 'vertical'
            #size_hint_y: None
            Spinner:
                size: .9 , .5
                font_size: (65/100)*self.height
                id: tipoMadeira
                text: 'TIPO'
                values: root.tipoMadeira
            BoxLayout:
                TextInput:
                    size: 
                    id: nomeMadeira
                    font_size: (75/100)*self.height
                    multiline: False
                    #password: True
        Button:
            size_hint: 0.3, 0.2
            pos_hint: {'center_x': .5 , 'top': .5}
            text: 'SALVAR'
        #Switch:
            #id: escolha
<ModificaMadeira>
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'FORTALEZA APP'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'MENU'
                    on_release: app.root.current = 'menu'
        Label:
            text: 'QUAL MADEIRA UTILIZADA:'
            font_size: '30sp'
        Spinner:
            text: 'SELECIONAR'
            values: '1'
        Button:
            text: 'SALVAR'

<ModificacaoDia>
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MADEIRAS MODIFICADAS'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'MENU'
                    on_release: app.root.current = 'menu'
        ScrollView:
            BoxLayout:
                id: tex_modificacoes
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height 

<MostraMadeira>
    size_hint_y: None
    height: '100sp'
    Label:
        id: label
        font_size: '20sp'
    Button:
        text: 'X'
        size_hint_x: None
        width: '40sp'
        on_release: app.root.get_screen('modificacaoDia').removeWidget(self.parent)                    

    