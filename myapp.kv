<Gerenciador>:
    Menu:
        name: 'menu'
    CadMadeira:
        name: 'cadastro_madeira'
    ModificaMadeira:
        name: 'modifica_madeira'
 
<Menu>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'FORTALEZA APP'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'MENU'
                    on_release: app.root.current = 'menu'
        GridLayout:
            rows: 2
            Label:
                text: 'Cadastro de Madeira'
                font_size: '30sp'
            Button:
                text: 'CLIQUE AQUI'
                on_release: app.root.current = 'cadastro_madeira'
            Label:
                text: 'Cadastro Modificação'
                font_size: '30sp'
            Button:
                text: '1'
                on_release: app.root.current = 'modifica_madeira'

<CadMadeira>
    BoxLayout:
        orientation: 'vertical'
        spacing: '30sp'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'FORTALEZA APP'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'MENU'
                    on_release: app.root.current = 'menu'
                    
        Label:
            padding: '30sp','10sp'
            size: '50sp', '50sp'
            text: 'CADASTRO DE MADEIRA'
            font_size: '50sp'
        BoxLayout:
            padding: '60sp','30sp'
            Spinner:
                size: '200sp','50sp'
                id: tipoMadeira
                text: 'TIPO'
                values: ["PINUS", "EUCALIPTO"]
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'NOME'
                    font_size: '40sp'
                TextInput:
                    id: nomeMadeira
        Button:
            text: 'SALVAR'
